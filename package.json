{
  "name": "lilgpt",
  "version": "1.0.0",
  "description": "Minimal Electron wrapper for ChatGPT with tabs (BrowserView), persistent profile, and stability tweaks.",
  "author": "Noelle Hockaday <contact@noellehockaday.net>",
  "homepage": "https://noellehockaday.net",
  "license": "GPL-3.0-only",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --dir",
    "pack:linux": "electron-builder --linux AppImage deb",
    "pack:mac": "electron-builder --mac",
    "pack:win": "electron-builder --win nsis"
  },
  "dependencies": {
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "net.noellehockaday.lilgpt",
    "productName": "Lil' G",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "icons/lilgpt-64.png"
    ],
    "directories": {
	  "output": "dist",
	  "buildResources": "icons"
	},
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icons/lilgpt.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "icon": "icons/"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "icons/lilgpt.ico"
    }
  }
}
